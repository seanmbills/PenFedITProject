<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:id="@+id/currentEmailField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/passwordField"
        android:layout_marginTop="125dp"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:hint="Current Email"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/newPasswordField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/newPasswordVerifyField"
        android:layout_below="@+id/passwordField"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:hint="New Email"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/newPasswordVerifyField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newPasswordField"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/cancelButton"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:hint="Verify New Email"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/passwordField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/newPasswordField"
        android:layout_below="@+id/currentEmailField"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:hint="Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="@string/submitButton" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/submitButton"
        android:text="@string/cancelButton" />
</RelativeLayout>